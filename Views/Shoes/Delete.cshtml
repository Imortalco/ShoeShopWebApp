@model ShoeShopWebApp.Models.Shoe

@{
    ViewData["Title"] = "Delete";
}

<h1>Премахване на продукт</h1>

<h3>Сигурни ли сте,че искате да премахнете този продукт ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Модел:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            Описание:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Цена:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
